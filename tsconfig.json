{
  "compilerOptions": {
    "outDir": "./lib",
    "rootDir": "./src",
    "baseUrl": "./",
    "lib": ["ES2020"],
    "target": "ES2020",
    "module": "ES2015",    
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowJs": true,
    "declaration": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "preserveSymlinks": true,               
    "forceConsistentCasingInFileNames": true,
    "strict": false, 
    "skipLibCheck": true                          
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "__tests__",
    "lib",
    "node_modules"
  ]
}
